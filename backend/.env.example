# eStation Docker Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=estation
POSTGRES_USER=estation_user
POSTGRES_PASSWORD=secure_password_change_me
POSTGRES_PORT=5432

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=redis_password_change_me
REDIS_PORT=6379

# =============================================================================
# API CONFIGURATION
# =============================================================================
BACKEND_PORT=8000
API_WORKERS=4

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate strong random keys for production!
# Use: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-in-production-please
JWT_SECRET_KEY=jwt-secret-key-change-in-production-please
JWT_ACCESS_TOKEN_EXPIRES=3600

# =============================================================================
# GEOSERVER CONFIGURATION
# =============================================================================
GEOSERVER_PORT=8080
GEOSERVER_USER=admin
GEOSERVER_PASSWORD=geoserver_password_change_me

# =============================================================================
# NGINX CONFIGURATION
# =============================================================================
HTTP_PORT=80
HTTPS_PORT=443

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Set to 'info' for production, 'debug' for development
LOG_LEVEL=debug

# =============================================================================
# DEVELOPMENT SPECIFIC
# =============================================================================
# Enable/disable services for development
ENABLE_GEOSERVER=true
ENABLE_CELERY_BEAT=true
ENABLE_NGINX=true

# =============================================================================
# DATA VOLUMES (Optional - for custom paths)
# =============================================================================
# Leave empty to use Docker managed volumes
POSTGRES_DATA_PATH=
REDIS_DATA_PATH=
GEOSERVER_DATA_PATH=
LOGS_PATH=